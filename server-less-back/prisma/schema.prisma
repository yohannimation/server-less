
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id          String         @id @default(uuid())
  filename    String
  status      FileStatus     @default(PENDING)
  uploadedAt  DateTime       @default(now())
  analyzedAt  DateTime?
  results     AnalysisResult?
  notification Notification[]
}

enum FileStatus {
  PENDING
  PROCESSING
  COMPLETED
  ERROR
}

model AnalysisResult {
  id          String    @id @default(uuid())
  fileId      String    @unique
  file        File      @relation(fields: [fileId], references: [id])
  statistics  Json      // moyenne, médiane, écart-type sur prix, quantités et notes
  anomalies   Json      // liste des anomalies (prix négatifs, quantités invalides, etc.)
  createdAt   DateTime  @default(now())
}

model Notification {
  id          String    @id @default(uuid())
  fileId      String
  file        File      @relation(fields: [fileId], references: [id])
  type        NotificationType
  status      NotificationStatus @default(PENDING)
  content     String    // Contenu du récapitulatif
  sentAt      DateTime?
  createdAt   DateTime  @default(now())

  @@index([fileId])
}

enum NotificationType {
  EMAIL
  PUSH
  WEBHOOK
}

enum NotificationStatus {
  PENDING
  SENT
  FAILED
}